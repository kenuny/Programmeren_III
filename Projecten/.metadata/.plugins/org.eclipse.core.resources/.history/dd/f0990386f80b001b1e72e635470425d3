package ui;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class OefenenVoorTheorie {

	public static void main(String[] args) {

		/*
		 * Rechtstreeks array meegeven zorgt voor een statische lijst waarop geen
		 * bewerkingen gedaan kunnen worden. Beter eerst een dynamosche lijst van maken
		 * via ArrayList.
		 */

		String[] kleuren = { "rood", "groon", "blauw", "wit", "zwart", "cyan", "magenta" };
		
		Arrays.sort(kleuren);
		System.out.println(Arrays.toString(kleuren));
		
		
		int kleur = Arrays.binarySearch(kleuren, 2, 4, "rood");
		
		String[] kleurenCopy = Arrays.copyOf(kleuren, kleuren.length);
		System.out.println(Arrays.toString(kleurenCopy));
		
		String[] kleurenCopy2 = Arrays.copyOfRange(kleuren, 3, 4);
		System.out.println(Arrays.toString(kleurenCopy2));
		
		boolean b = kleuren[0].equals("rood");
		System.out.println(b);

		//List<String> kleurenlijst = Arrays.asList(kleuren);
		List<String> kleurenlijst = new ArrayList<>(Arrays.asList(kleuren));
		
		

		System.out.println(kleurenlijst);

		kleurenlijst.add("zilver");
		System.out.println(kleurenlijst);

		kleurenlijst.remove(kleurenlijst.indexOf("groon"));
		System.out.println(kleurenlijst);

		kleurenlijst.forEach(e -> e.toUpperCase());
		System.out.println(kleurenlijst);

		kleurenlijst.clear();
		System.out.println(kleurenlijst);

	}
}

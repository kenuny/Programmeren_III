package ui;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.List;

public class Deitel_SortingList_717 {

	public static void main(String[] args) {
		
		String[] suits = { "Hearths", "Diamonds", "Clubs", "Spades" };
		
		List<String> lijst = new ArrayList<>();
		lijst = Arrays.asList(suits);
		
		System.out.printf("Ongesorteerde lijst", lijst);
		System.out.println(lijst);
		
		System.out.printf("Gesorteerde lijst", lijst);
		Collections.sort(lijst);
		System.out.printf("%s", lijst);
		
		
	}
}

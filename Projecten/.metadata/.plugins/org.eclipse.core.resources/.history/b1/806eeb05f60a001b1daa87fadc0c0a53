package ui;

import java.util.Arrays;

public class Deitel_ArrayManipulations_351 {

	public static void main(String[] args) {
	
		System.out.print("Declareert 2D array: doubleArray:  ");
		double[] doubleArray = { 8.4, 9.3, 0.2, 7.9, 3.4 };
		printArray(doubleArray);
		
		System.out.print("Gesorteerde Array:  ");
		Arrays.sort(doubleArray);
		printArray(doubleArray);
		
		int[] filledInArray = new int[10];
		Arrays.fill(filledInArray, 7);
		printArray(filledInArray);
		
	}
	
	private static void printArray(double[] array) {
		System.out.println(Arrays.toString(array));
	}
}

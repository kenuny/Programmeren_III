package ui;

import java.util.ArrayList;
import java.util.List;

public class Deitel_CollectionTest_709 {

	public static void main(String[] args) {
		
		// Creëert een array colors met 4 kleuren.
		String[] colors = {"MAGENTA", "RED", "WHITE", "BLUE", "CYAN"};
		
		// Creëert een lege dynamische lijst.
		List<String> list = new ArrayList<>();
		
		// Doorloopt de array met een enhanced for. 
		for (String color : colors) {
			
			// Plaats in de lege dynamische lijst elke color van colors. 
			list.add(color);
		}
		
		
		// Maakt een array aan met 3 kleuren.
		String[] removeColors = {"RED","WHITE","BLUE"};
		
		// Maakt een lege dynamische removeList aan.
		List<String> removeList = new ArrayList<>();	
		
		// Doorloopt de array removeColors.
		for (String color : removeColors) {
			removeList.add(color);
		}
		
	}
}
